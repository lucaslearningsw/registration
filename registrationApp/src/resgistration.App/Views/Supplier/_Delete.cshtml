@using resgistration.App.Extensions;
@model resgistration.App.ViewModels.SupplierViewModel
@{
    ViewData["Title"] = "Excluir Fornecedor";
}

<h1>@ViewData["Title"]</h1>

<vc:Summary></vc:Summary>


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
      <span aria-hidden="true">x</span><span class="sr-only">Fechar</span>
    </button>

</div>

<form asp-action="Delete">

    <input type="hidden" asp-for="Id" />
    <div class="modal-body">

        <div>
    <dl class="row">
        <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class ="col-sm-12">
                    @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Document)
        </dt>
        <dd class="col-sm-12">
                    @this.DocumentFormart(Model.SupplierType, Model.Document)
        </dd>
        <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.Active)
        </dd>
    </dl>
</div>
        

        <div class="modal-footer">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <input type="button" class="btn btn-info" value="Fechar" data-dismiss="modal"/>

            </div>
        </div>
    </div>

</form>

